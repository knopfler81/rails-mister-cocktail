<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
   <h1 class="cocktail-title"> <i class="fa fa-glass big-glass"></i> Cocktail <%= @cocktail.name %> <i class="fa fa-glass big-glass"></i></h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">


    <ul class="list-unstyled">
      <% @cocktail.doses.each do |dose| %>
        <li>
          <p><strong><%= dose.description %></strong> ~> <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), method: :delete do %>
            <i class="fa fa-trash "></i>
            <hr>
          <% end %>
          </p>
        </li>
      <% end %>
    </ul>

    <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class:'btn btn-success' %>

    <%= link_to "Back to list", cocktails_path, class:'btn btn-primary' %>
    <%= link_to "Remove Cocktail", cocktail_path(@cocktail), method: :delete, data: {confirm: "Do you really want to remove this cocktail?"}, class:'btn btn-danger' %>
  </div>

</div>
