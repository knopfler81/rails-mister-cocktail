<h1 class="text-center">Cocktails List</h1>

<div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-3 card">
       <i class="fa fa-glass glass"></i>
       <h2 class="card-description"><%= link_to cocktail.name, cocktail_path(cocktail)%></h2>
    </div>
    <% end %>
</div>

